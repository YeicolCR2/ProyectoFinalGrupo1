<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.web.WebView?>
<?import javafx.geometry.Insets?>

<VBox VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.proyecto.GamePlayController"
      alignment="CENTER" spacing="15">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="barajarButton" onAction="#handleBarajar" text="Barajar Cartas (Caja → Mazo)"
                style="-fx-font-size: 16px; -fx-background-color: #6495ED; -fx-text-fill: white;" />

        <Button onAction="#handleRobarMano" text="Robar 8 Cartas (Mano Inicial)"
                style="-fx-font-size: 16px; -fx-background-color: #3CB371; -fx-text-fill: white;" />

        <Separator orientation="VERTICAL" prefHeight="40" />

        <Label fx:id="estadoSeleccionLabel" text="Seleccionadas: 0 / 3"
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #FFD700;" />

        <Button fx:id="validarSandwichButton" onAction="#handleValidarSandwich" text="Validar Sándwich"
                disable="true"
                style="-fx-font-size: 16px; -fx-background-color: #FFD700; -fx-font-weight: bold; -fx-text-fill: #333333;" />
    </HBox>

    <WebView fx:id="gameWebView" prefHeight="600" prefWidth="900" VBox.vgrow="ALWAYS"/>

    <HBox alignment="CENTER" spacing="15">
        <Button onAction="#handleRestartGame" text="Reiniciar" />
        <Button onAction="#handleBackToMenu" text="Menú Principal" />
    </HBox>

</VBox>