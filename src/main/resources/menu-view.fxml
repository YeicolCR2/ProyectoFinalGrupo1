<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.proyecto.MenuController">

    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <Label fx:id="lblTitle" style="-fx-font-size: 52px; -fx-font-weight: bold;" text="The Sandwich Game" />


    <Label style="-fx-font-size: 32px; -fx-font-weight: bold;" text="Menu Principal" />

    <Label style="-fx-font-size: 16px;" />

    <VBox alignment="CENTER" spacing="15.0">
        <VBox.margin>
            <Insets top="30.0" />
        </VBox.margin>

        <Button fx:id="btnNewGame" onAction="#handleNewGame" style="-fx-font-size: 16px; -fx-min-width: 250px; -fx-min-height: 50px; -fx-background-color: c0df85;" text="Crear Nueva Partida" />

<!--        <Button fx:id="LoadGame" onAction="#handleLoadGame" style="-fx-font-size: 16px; -fx-min-width: 250px; -fx-min-height: 50px; -fx-background-color: c0df85;" text="Cargar Partida" />-->

        <Button fx:id="btnViewCards" onAction="#handleViewCards" style="-fx-font-size: 16px; -fx-min-width: 250px; -fx-min-height: 50px; -fx-background-color: c0df85;" text="Ver Todas las Cartas" />

        <Button fx:id="btnExit" onAction="#handleExit" style="-fx-font-size: 16px; -fx-min-width: 250px; -fx-min-height: 50px; -fx-background-color: c0df85;" text="Salir" />
    </VBox>
</VBox>
